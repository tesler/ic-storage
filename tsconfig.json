{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "es5",
        "outDir": "build",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "rootDir": "src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}